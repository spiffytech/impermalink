{
  "name": "Impermalink",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Impermalink: Links for Later",
  "homepage_url": "https://impermalink.spiffy.tech",
  "icons": {
    "16": "icons/favicon-16x16.png",
    "48": "icons/favicon-32x32.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/bg/background.js"],
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/favicon-16x16.png",
    "default_title": "Impermalink -> save for later",
    "show_matches": ["<all_urls>"]
  },
  "permissions": [
    "contextMenus",
    "storage",
    "cookies",
    "tabs",
    "notifications",
    "https://impermalink.spiffy.tech/app/share-target"
  ],
  "options_ui": {
    "page": "options/index.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "impermalink@spiffy.tech"
    }
  }
}
