<details class="mb-8 last:mb-0">
  <!-- z-10 because opacity on link items makes them appear above the sticky group header -->
  <summary class="linkGroup-header list-none sticky top-0 rounded-lg z-10" style="{{ linkGroup.domain | pattern }}">
    <header class="text-2xl text-gray-700 rounded-lg p-2 mb-2 bg-gradient-to-r from-gray-200">
      <span class="mr-1">
        <i class="fas fa-globe-americas"></i>
      </span>
      <span>{{linkGroup.domain | replace(r/^www\./, '')}}</span>
      <span class="text-sm text-gray-500 italic">({{ linkGroup.links.length }})</span>
    </header>
  </summary>
  <ul class="p-2 rounded-lg grid gap-2 md:gap-4 gap-y-2 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 auto-rows-min bg-gradient-to-b from-gray-200" style="{{ linkGroup.domain | pattern }}">
    {% for link in linkGroup.links %}
      <li class="contents">
        {% include "partials/link.njk" %}
      </li>
    {% endfor %}
  </ul>
</details>